@model IEnumerable<APP_WEB.Models.LineHydrocarbonsModelView>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-users-cog"></i>
            <b> Usuarios </b>
        </h1>
    </div>


    <div class="card shadow mb-4">
        <div class="card-body">

            <p>
                <a asp-action="Create" class="btn btn-success btn-"> <i class="fas fa-plus"></i> Agregar Línea</a>
            </p>

            <div class="table-responsive">
                <table id="table_id" class="table table-bordered table-responsive table-hover table-striped" width="100%" cellspacing="0">
                    <thead>

                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id_LineHydrocarbon)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name_Line)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Length_Line)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Diameter_Line)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InstalationDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                <a class="btn btn-warning fas fa-edit" title="Editar" asp-action="Edit" asp-route-id="@item.Id_LineHydrocarbon"></a>
                                <a class="btn btn-info fas fa-eye" title="Visualizar" asp-action="Details" asp-route-id="@item.Id_LineHydrocarbon"></a>
                                <a class="btn btn-danger fas fa-times-circle" title="Desactivar" asp-action="Deactive" asp-route-id="@item.Id_LineHydrocarbon"></a>
                                <a class="btn btn-dark fas fa-trash-alt" title="Eliminar" asp-action="Delete" asp-route-id="@item.Id_LineHydrocarbon"></a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id_LineHydrocarbon)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name_Line)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Length_Line)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Diameter_Line)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InstalationDate)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>