@model APP_WEB.Models.LineHydrocarbonsModelView

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-users-cog"></i>
            <b> Lineas de Transporte de Hidrocarburos </b>
        </h1>
    </div>

    <div class="card shadow">

        <div class="card-header py-3">
            <h6 class="text-primary">
                <label> <i class="fas fa-user-plus"> </i> <b> Creación de Líneas </b> </label>
            </h6>
        </div>

        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <h6 class="m-0 font-weight-bold text-danger">
                            <asp:Label ID="L_Info" runat="server"> <i class="fas fa-info"> </i> Los campos con (*) son requeridos.. </asp:Label>
                        </h6>

                        <br />

                        <form asp-action="Create" method="post">
                            >
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Id_LineHydrocarbon" class="control-label"></label>
                                <input asp-for="Id_LineHydrocarbon" class="form-control" />
                                <span asp-validation-for="Id_LineHydrocarbon" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name_Line" class="control-label"></label>
                                <input asp-for="Name_Line" class="form-control" />
                                <span asp-validation-for="Name_Line" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Length_Line" class="control-label"></label>
                                <input asp-for="Length_Line" class="form-control" />
                                <span asp-validation-for="Length_Line" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Diameter_Line" class="control-label"></label>
                                <input asp-for="Diameter_Line" class="form-control" />
                                <span asp-validation-for="Diameter_Line" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="InstalationDate" class="control-label"></label>
                                <input asp-for="InstalationDate" class="form-control" />
                                <span asp-validation-for="InstalationDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
