                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.InstalationDate)
                                </dd>
                            </dl>

                            <div class="col-lg-4 mb-3 mb-lg-0 offset-lg-3">
                                <input type="hidden" asp-for="Id_LineHydrocarbon" />
                                <input type="submit" value="Eliminar" class="btn btn-danger btn-user btn-block" />
