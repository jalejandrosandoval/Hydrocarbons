<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no shrink-to-fit=no" />
    <title>@ViewData["Title"] Transporte Hidrocarburos </title>
    <!--- Linkiada --->

    <link rel="icon" type="image/png" href="~/images/icons/maintenance.png" />
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />

    <link href="~/Content/DataTables/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/Buttons-1.6.1/css/buttons.dataTables.min.css" rel="stylesheet" />

    <!--<link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">-->

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Login">
                    <img src="~/images/Logo.png" width="50" height="50" alt="Transporte de Hidrocarburos" class="d-inline-block align-top" />
                    Transporte de Hidrocarburos
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <!---partial name="_ViewPartial" /-->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"m
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="sticky-footer">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <b>Versión</b> 1.0                
                <br />
                Todos los derechos reservados Petroco S.A - Colombia
                <br />
                Hecho por: Jhon Alejandro SAndoval Miranda
                <br />
                <span>
                    <strong>Copyright</strong> &copy; @DateTime.Now.Year
                </span>
            </div>
        </div>
    </footer>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/js/sb-admin-2.min.js" asp-append-version="true"></script>

    <script src="~/Content/DataTables/datatables.min.js"></script>
    <script src="~/Content/DataTables/Buttons-1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/DataTables/Buttons-1.6.1/js/buttons.colVis.min.js"></script>
    <script src="~/Content/DataTables/Buttons-1.6.1/js/buttons.html5.min.js"></script>
    <script src="~/Content/DataTables/Buttons-1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable();
        });

    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
