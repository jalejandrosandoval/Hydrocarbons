@model Bussiness_Logic.Models.Line_Hydrocarbon

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-cogs"></i>
            <b> Usuarios </b>
        </h1>
    </div>

    <div class="card shadow">

        <div class="card-header py-3">
            <h6 class="text-primary">
                <label> <i class="fas fa-address-card"> </i> <b> Detalles de Líneas de Transporte... </b> </label>
            </h6>
        </div>

        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="mb-3 mb-lg-0 offset-lg-3">

                            <h3>¿Esta Seguro de Eliminar este Usuario?</h3>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Name_Line)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Name_Line)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Length_Line)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Length_Line)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Diameter_Line)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Diameter_Line)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.InstalationDate)
